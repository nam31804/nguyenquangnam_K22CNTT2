@{
    ViewBag.Title = "Chào Mừng";
}
<h1>Chào mừng bạn đến với thế giới hội hoạ kì ảo</h1>
<div class="body-content1">
    <div class="slides">
        <video class="centered-video" autoplay loop >
            <source src="~/videos/vang.mp4" type="video/mp4">
            Trình duyệt của bạn không hỗ trợ thẻ video.
        </video>
    </div>

</div>

<style>
    h1 {
        text-align: center;
        color: lightskyblue;
    }

    .body-content1 {
        position: relative;
        max-width: 100%;
        margin: auto;
        overflow: hidden;
    }

    .centered-video {
        width: 100%;
        height: 500px;
        object-fit: cover;
    }
</style>

<h2>Chào mừng, @ViewBag.Username!</h2>
<p>Chúc bạn có một ngày tuyệt vời!</p>
@* Link đăng xuất *@
@if (Session["UserId"] != null)
{
    <a href="@Url.Action("Logout", "Khachhangs")">Đăng xuất</a>
}
