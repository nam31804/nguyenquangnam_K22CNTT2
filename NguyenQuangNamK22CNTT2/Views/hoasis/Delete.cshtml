@model NguyenQuangNamK22CNTT2.Models.hoasi
<link href="~/Scripts/del.css" rel="stylesheet" />
@{
    ViewBag.Title = "Xác nhận xóa";
}

<h2 class="text-center">Xác nhận xóa tác giả</h2>

<h3 class="text-center text-danger">Bạn có chắc chắn muốn xóa hoạ sĩ này không?</h3>

<div class="delete-container">
    <h4>Thông tin hoạ sĩ</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Tên Hoạ Sĩ:</dt>
        <dd>@Html.DisplayFor(model => model.hoasi_name)</dd>

        <dt>Tiểu Sử</dt>
        <dd>@Html.DisplayFor(model => model.bio)</dd>

        <dt>Website</dt>
        <dd>@Html.DisplayFor(model => model.website)</dd>

        <dt>Ảnh</dt>
        <dd>@Html.DisplayFor(model => model.ImagePath)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Xóa</button>
            @Html.ActionLink("Quay lại danh sách", "Index", new { @class = "btn btn-secondary" })
        </div>
    }
</div>
