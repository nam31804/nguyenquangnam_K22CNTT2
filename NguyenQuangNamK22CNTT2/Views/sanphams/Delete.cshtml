@model NguyenQuangNamK22CNTT2.Models.sanpham
<link href="~/Scripts/del.css" rel="stylesheet" />

@{
    ViewBag.Title = "Xác nhận xóa sản phẩm";
}

<h2 class="text-center">Xác nhận xóa sản phẩm</h2>

<h3 class="text-center text-danger">Bạn có chắc chắn muốn xóa sản phẩm này không?</h3>

<div class="delete-container">
    <h4>Thông tin sản phẩm</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Tên Sản Phẩm</dt>
        <dd>@Html.DisplayFor(model => model.tieude)</dd>

        <dt>Mô Tả</dt>
        <dd>@Html.DisplayFor(model => model.mota)</dd>

        <dt>Giá</dt>
        <dd>@Html.DisplayFor(model => model.gia)</dd>

        <dt>Ảnh</dt>
        <dd>@Html.DisplayFor(model => model.image_url)</dd>

        <dt>Hoạ sĩ</dt>
        <dd>@Html.DisplayFor(model => model.hoasi.hoasi_name)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Xóa</button>
            @Html.ActionLink("Quay lại danh sách", "Index", new { @class = "btn btn-secondary" })
        </div>
    }
</div>
